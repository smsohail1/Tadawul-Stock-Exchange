                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/high_stock"
                android:text="3"
                android:textColor="#000000" />
</RelativeLayout>


            <ImageView
                android:id="@+id/first_pipe"

                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
