                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/low_stock"
                    android:text="1"
                    android:textColor="#000000" />

            </RelativeLayout>





        </RelativeLayout>



        <ImageView
