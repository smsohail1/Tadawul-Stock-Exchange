<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:padding="10dp">


    <RelativeLayout
        android:id="@+id/listview_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/BOP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="BOP"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/float_value1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8.72"
                android:textColor="#000000" />

            <TextView

                android:id="@+id/float_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/float_value1"
                android:text="+0.33"
                android:textColor="#000000" />



            <ImageView
                android:id="@+id/icon_updown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/float_value"
                android:src="@drawable/green_trangle" />


            <TextView
                android:id="@+id/percentage_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/icon_updown"
                android:text="+3.93%"

                android:textColor="#000000" />
        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:gravity="center"
        android:id="@+id/combine_box"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listview_top"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/volume_bg"
        >

        <RelativeLayout

            android:layout_toLeftOf="@+id/center_pipe"

            android:layout_alignParentLeft="true"
            android:id="@+id/high_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
<RelativeLayout

    android:layout_toLeftOf="@+id/first_pipe"
